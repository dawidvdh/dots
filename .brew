#!/usr/bin/env bash

# Install command-line tools using Homebrew.

# Make sure we’re using the latest Homebrew.
brew update

# Upgrade any already-installed formulae.
brew upgrade

# Save Homebrew’s installed location.
BREW_PREFIX=$(brew --prefix)
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# Additional taps
brew tap homebrew/cask-fonts
brew tap homebrew/cask-versions
brew tap facebook/fb

# Install GNU core utilities (those that come with OS X are outdated).
# Don’t forget to add `$(brew --prefix coreutils)/libexec/gnubin` to `$PATH`.
brew install coreutils
# Install some other useful utilities like `sponge`.
brew install moreutils
# Install GNU `find`, `locate`, `updatedb`, and `xargs`, `g`-prefixed.
brew install findutils
# Install GNU `sed`, overwriting the built-in `sed`.
brew install gnu-sed

# Install `wget`
brew install wget

# Install GnuPG to enable PGP-signing commits.
# brew install gnupg

# Install more recent versions of some OS X tools.
brew install vim
brew install grep
brew install openssh

# folder jumping
brew install zoxide

# Ruby Version Management
brew install rbenv
brew install ruby-build

# Python Version Management
brew install pyenv

# Install other useful binaries.
brew install ack
brew install git
brew install imagemagick
brew install p7zip
brew install rename
brew install tree
brew install zsh
brew install ffmpeg
brew install rust
brew install cmake
brew install go
brew install automake
brew install hammerspoon
brew install tmux
brew install scrcpy # control/view android phone
brew install idb-companion # control/record ios phone
brew install svn # for brew fonts

# Casks

# Daily
brew install --cask 1password
brew install --cask rectangle

# Dev
brew install --cask adoptopenjdk/openjdk/adoptopenjdk11
brew install --cask visual-studio-code-insiders
brew install --cask alacritty
brew install --cask imageoptim
brew install --cask adoptopenjdk8
brew install --cask android-studio
brew install --cask flipper
brew install --cask insomnia

# browser
brew install --cask google-chrome-canary
brew install --cask firefox

# less often
# brew install --cask transmission
brew install --cask dropbox

# Fonts
brew install --cask font-menlo-for-powerline
brew install font-source-code-pro-for-powerline

# Remove outdated versions from the cellar.
brew cleanup
